<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Fiscalité {% endblock %}</title>
        <link rel="shortcut icon" href="{{ asset('bundles/fiscalitegestionfiscalite/images/favicon.ico') }}" />
        <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">

      	{#ajout de tous les css #}
		{% stylesheets filter='cssrewrite'
		'@FiscaliteGestionFiscaliteBundle/Resources/public/css/style.css'
		'@FiscaliteGestionFiscaliteBundle/Resources/public/css/jquery-ui.css'
                '@FiscaliteGestionFiscaliteBundle/Resources/public/css/bootstrap.min.css'
		'@FiscaliteGestionFiscaliteBundle/Resources/public/css/bootstrap-theme.min.css'
		%}		
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css" media="all"/>
		{% endstylesheets %}
      	{#ajout de la datatable et du calendrier en javascript #}

		{% block javascripts  %}
		{% javascripts
		'@FiscaliteGestionFiscaliteBundle/Resources/public/js/jquery-1.10.2.js'
		'@FiscaliteGestionFiscaliteBundle/Resources/public/js/jquery-ui.js'
                '@FiscaliteGestionFiscaliteBundle/Resources/public/js/bootstrap.min.js'
                '@FiscaliteGestionFiscaliteBundle/Resources/public/js/jquery-v1.7.2.js'
                '@FiscaliteGestionFiscaliteBundle/Resources/public/js/jquery-ui-1.10.4.custom.min.js'
  		%} 
        <script type="text/javascript" src="{{ asset_url }}"></script> 
		{% endjavascripts %}

		{% endblock %}		

    </head> 
    <body>

{% block header %}
        <div class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="navbar-header navigation">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand"  href="{{ path('fiscalite') }}">
                    <img class="img-responsive" src="{{ asset('bundles/fiscalitegestionfiscalite/images/logo.jpg') }}" alt="Mairie de Voreppe" /> 
                </a>
            </div>    
            <div class="navbar-collapse collapse" id="navbar-collapse-1">
                <ul class="nav navbar-nav">

{% if is_granted('ROLE_UTILISATEUR') %}
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Tous les impôts <b class="caret"></b></a>  
                        <ul class="dropdown-menu">
                            <li><a href="{{ path('taxehabitationliste') }}">Taxes d'habitation</a></li>
                            <li><a href="{{ path('taxefonciereliste') }}">Taxes Foncières</a></li>
                        </ul>
                    </li>
                    <li><a  href="{{ path('secteur') }}">Secteur</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Simulation <b class="caret"></b></a>  
                        <ul class="dropdown-menu">
                            <li><a href="{{ path('simulationTH') }}">Taxes d'habitation</a></li>
                            <li><a href="{{ path('simulationTF') }}">Taxes foncières</a></li>
                        </ul>
                    </li>

{% endif %}                    

{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Mon compte <b class="caret"></b></a>  
                        <ul class="dropdown-menu">
                            <li><a>Connecté en tant que {{ app.user.username }}</a></li>

                                {% if is_granted('ROLE_ADMIN') %}
                            <li>
                                <a  href="{{path('sonata_admin_dashboard')}}">
                                    Tableau de bord
                                </a>
                            </li>
{% endif %} 
                            <li><a href="{{ path('fos_user_security_logout') }}">
                                    Déconnexion
                                </a> 
                            </li>
                        </ul>
                    </li>
{% else %}
                    <li>
                        <a href="{{ path('fiscalite') }}">
                            Connexion
                        </a> 
                    </li>
{% endif %}
{% if is_granted('ROLE_UTILISATEUR') %}

                    <li>
                        <a href="{{ path('rapportfichier') }}" target="_blank" title="Rapport de fiscalité du dernier fichier" >
                            <img class="img-icon-small" src="{{ asset('bundles/fiscalitegestionfiscalite/images/note.png') }}" /> 
                        </a>
                    </li>
{% endif %}

                </ul>
            </div>
        </div>           
        <div id="header-wrapper">
            <div id="alert-info" style="background-color:#0193CC;text-align: center;color:white;font-family: 'Arvo', serif;">
                    {% for flashMessage in app.session.flashbag.get('notice') %}
                        {{ flashMessage }}     
                    {% endfor %}
            </div>
        </div>  
        <script type="text/javascript" >
            $('.dropdown-toggle').dropdown()
        </script> 
{% endblock %}
{% block contenu %}
{% block fos_user_content %}
{% endblock %} 
{% endblock %}              
{% block footer %}
        <div class="footer">
            <div class="container">
                <div class="row">
                    <ul>
                        <li><a href="/web/documentation_utilisateur_fiscalite.pdf">Aide</a></li>
                        <li><span id="developpeurs" rel="popover">Développeurs</span></li>
                            <script>$(document).ready(function() {
                                    $("#developpeurs").popover({
                                        html: true,
                                        animation: true,
                                        content: "Romain Marécat",
                                        placement: "bottom",
                                    });
                                });</script>
                        <li>© {{"now"|date('Y')}} Fiscalité</li>
                    </ul>
                </div>
            </div>
        </div>
{% endblock %} 

    </body>
</html>
