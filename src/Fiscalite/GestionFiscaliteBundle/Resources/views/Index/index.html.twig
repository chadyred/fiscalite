{% extends 'FiscaliteGestionFiscaliteBundle::layout.html.twig' %}
{% block javascripts  %}
   {{ parent() }}
{% endblock %}
{% block contenu %}
<div class="container index">
    <div class="row">
        <div class="front-card col-sm-12 col-md-12  col-lg-12"> 
            <div class="front-welcome col-sm-6 col-md-6  col-lg-6 content-tab">
                <div class="row">
                    <div class="fiscalite-image col-sm-6 col-md-6  col-lg-6 col-sm-offset-1 col-md-offset-1  col-lg-offset-1">
                        <img src="{{ asset('bundles/fiscalitegestionfiscalite/images/lohp_mdl_sprite.png') }}" alt="Fiscalité" />
                    </div>
                </div>        
                <div class="callout-copy">    
                    <h1>Bienvenue sur Fiscalité.</h1>
                    <p>Démarrez un chargement de fichier, explorez vos les articles compte et simulez selon vos besoin.</p> 
                </div>
{% if is_granted('ROLE_ADMIN') %}
                <form class="selection_fichier form-horizontal" method="post" role="form"{{ form_enctype(form) }}>
                    <div class="form-group">  
                        <div class="col-sm-10">
                                {{ form_widget(form) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-10">
                                <button class="btn btn-primary" data-loading-text="Loading..." type="submit">
                                    Charger un fichier
                                </button>
                                <img src="{{ asset('bundles/fiscalitegestionfiscalite/images/loading.gif') }}" alt="chargement" id="chargement" style="display:none" />
                            </div>
                        </div>
                    </form>
                    <div class="fiscalite-links form-group">
                        <div class="controls">
                            <a class="fiscalite-button btn btn-info" href="{{ path('taxehabitationliste') }}"> Consulter </a>
                            <a class="fiscalite-button btn btn-info" target="_blank" href=""> Simulation </a>

                        </div>
                    </div>  
{% endif %}
                </div> 
                <div class="row">   
                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                        <div class="front-signin col-sm-5 col-md-5  col-lg-5 pull-right content-tab">
                            <h5>Bienvenue {{ app.user.username }}.</h5>
                        </div>
                        <div class="front-signup col-sm-5 col-md-5  col-lg-5 pull-right content-tab">
                            <h2 class="col-sm-12"><strong>Nouveau sur Fiscalité ?</strong> Inscrivez-vous</h2>
{% block register2 %}
{% render url('fos_user_registration_register') %} 
{% endblock %}
                        </div> 
                    {% else %}
                        <div class="front-signin col-sm-5 col-md-5  col-lg-5 pull-right content-tab">
{% block login %}
<div class="form-group">
{% render url('login') %}
</div>
{% endblock %}                             
                                </div> 
                                <div class="front-signup col-sm-5 col-md-5  col-lg-5 pull-right content-tab">
                                    <h2 class="pull-right"><strong>Nouveau sur Fiscalité ?</strong> Inscrivez-vous</h2>
                                    
{% block register %}
{% render url('fos_user_registration_register') %}
{% endblock %}
                                </div> 
{% endif %}
                            </div>
                        </div>
                    </div>
                </div>
{% endblock %}

{% block footer %}
    {{ parent() }}
{% endblock %}
