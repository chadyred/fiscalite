{% extends '::base.html.twig' %}
{% block contenu %}
<div class="container index">
    <div class="row">
        <div class="front-card col-sm-12 col-md-12  col-lg-12"> 
            <div class="front-welcome col-sm-6 col-md-6  col-lg-6 content-tab">
                <div class="row">
                    <div class="fiscalite-image col-sm-6 col-md-6  col-lg-6 col-sm-offset-1 col-md-offset-1  col-lg-offset-1">
                        <img src="{{ asset('bundles/fiscalitegestionfiscalite/images/lohp_mdl_sprite.png') }}" alt="Fiscalité" />
                    </div>
                </div>        
                <div class="callout-copy">    
                    <h1>Enregistrement du fichier</h1>
                    <p>Démarrez un chargement de fichier, explorez vos les articles compte et simulez selon vos besoin.</p> 
                </div>
                <div class="selection_fichier">
                    <p>{{"Fichier "~fichier.getNom() ~" enregistré avec succès."}} </p>
                </div>     
                <div class="fiscalite-links form-group">
                    <div class="col-sm-10">
                        <a class="fiscalite-button btn btn-info" href="{{ path('taxehabitationliste') }}"> Consulter </a>
                        <a class="fiscalite-button btn btn-info" target="_blank" href=""> Simulation </a>

                    </div>
                </div>        
            </div> 
            <div class="row">   
{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                <div class="front-signin col-sm-5 col-md-5  col-lg-5 pull-right content-tab">
                    <h5>{{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }}</h5>
                    <a href="{{ path('fos_user_security_logout') }}">
                    {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                    </a>
                </div>
{% else %}
                <div class="front-signin col-sm-5 col-md-5  col-lg-5 pull-right content-tab">
                   {%  render url('fos_user_security_login') %}
                </div>
{% endif %}
{% if is_granted("ROLE_ADMIN") %}

                <div class="front-signup col-sm-5 col-md-5  col-lg-5 pull-right content-tab">
                    <h2 class="col-sm-12"><strong>Inscrire </strong>un nouvel utilisateur sur Fiscalité</h2>
{% block register %}
{{ render(controller("FOSUserBundle:Registration:register")) }}
{% endblock %}
                </div> 
{% endif %}                
            </div>  
        </div>
    </div>
</div>
{% endblock %}

{% block footer %}
    {{ parent() }}
{% endblock %}
