{% extends '::base.html.twig' %}
{% block javascript  %}
   {{ parent() }}
{% endblock %}

{% block contenu %}
{{ parent() }}
<div class="container-fluid base">
    <div class="row-fluid">
        <div class="span12"> 
            <div class="row-fluid">
                <div class="span3">
                    <div class="sidebar-article span12">
                        <div class="content-header"><h3>Le secteur</h3></div> 
                        <ul class="stream-items-id nav nav-list">
                            <li><strong>Nom du secteur : </strong>{{secteur.getNom()}}</li>
                            <li><strong>Nombre d'individu : </strong>{{secteur.getNombreIndividu()}}</li>
                        </ul>
                    </div>
                </div>
                <div class="body-content span9">
                    <div class="content-header"><h3>Les articles concernés</h3></div> 
                    <table  class="table table-striped table-hover ">
                        <thead>
                            <tr>
                                <th class="text-center">Nom, prénom</th><th class="text-center">Adresse</th>
                            </tr>
                        </thead>
                        <tbody>
                                    {% for articleTH in article %}

                                <tr>
                                    <td class="text-center"><a href="{{ path('articleTH',{'id': articleTH.getNumerosequentiel()}) }}">{{articleTH.getNomprenom() ~ articleTH.getSuitenom()}}</a></td>
                                    <td class="text-center">{{articleTH.adresse.numeroimmeubleaft 
                                            ~" "~articleTH.adresse.indicederepetition ~" "~articleTH.adresse.libellevoieaft}}</td>
                                    </tr>
                                        {%endfor%}
                                </tbody>
                            </table>
                        </div>
                    </div>                      
                </div>                            
            </div>
{% endblock %}
{% block footer %}
{{ parent() }}
{% endblock %}