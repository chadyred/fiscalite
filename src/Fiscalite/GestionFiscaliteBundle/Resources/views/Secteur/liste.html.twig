{% extends 'FiscaliteGestionFiscaliteBundle::layout.html.twig' %}
{% block javascript  %}
   {{ parent() }}
{% endblock %}

{% block contenu %}
{{ parent() }}
<div class="container base">
    <div class="row">
        <div class="col-sm-12 col-md-12  col-lg-12"> 
            <div class="row">
                <div class="col-sm-12 col-md-4  col-lg-4 sidebar-article">
                        <form  class="form-horizontal" method="get" {{ form_enctype(form) }}>
                            <fieldset>
                                <legend>Rechercher un secteur</legend>
                                <div class="form-group ">
                                    {# Génération du label. #}
                                    {{ form_label(form.nom, "Nom de secteur : ",{ 'label_attr': { 'class': 'col-sm-6' } }) }}
                                        <div class="col-sm-6 col-md-6 col-lg-6">
                                    {# Affichage des erreurs pour ce champ précis. #}
                                    {{ form_errors(form.nom) }}
                                    {# Génération de l'input. #}
                                    {{ form_widget(form.nom) }}
                                            </div>
                                        </div>
                                        <div class="form-group">
                                    {# Génération du label. #}
                                    {{ form_label(form.nombreIndividu, "Nombre d'individu : ",{ 'label_attr': { 'class': 'col-sm-6' } }) }}
                                                <div class="col-sm-6 col-md-6 col-lg-6">
                                    {# Affichage des erreurs pour ce champ précis. #}
                                    {{ form_errors(form.nombreIndividu) }}
                                    {# Génération de l'input. #}
                                    {{ form_widget(form.nombreIndividu) }}
                                                    </div>
                                                </div>
                                    <div class="form-group">
                                    {# Génération du label. #}
                                    {{ form_label(form.typerue, "Adresse : ",{ 'label_attr': { 'class': 'col-sm-6' } }) }}
                                                <div class="col-sm-6 col-md-6 col-lg-6">
                                    {# Affichage des erreurs pour ce champ précis. #}
                                    {{ form_errors(form.typerue) }}
                                    {# Génération de l'input. #}
                                    {{ form_widget(form.typerue) }}    
                                    {{ form_errors(form) }}

                                                    </div>
                                                </div>
                                                <div class="form-group"> 
                                                    <div class="col-sm-12 col-md-12 col-lg-12">  
                                                        <input class="btn btn-primary col-md-7" type="submit" value="Rechercher" />
                                                    </div>
                                                </div>     
                                            </fieldset>
                                        </form>
                                </div>
                                <div class="body-content col-sm-12 col-md-7  col-lg-7 col-md-offset-1">
                                    <div> <h5>{{ "Résultat : "~ pagination.getTotalItemCount ~" article(s) trouvé(s)."}}</h5></div>
                                    <table class="table table-striped table-hover">
                                        <thead>
                                            <tr>
                                                <th class="text-center">Id</th>
                                                <th class="text-center">{{ knp_pagination_sortable(pagination, 'Nom ', 'a.nom') }}</th>
                                                <th class="text-center">Nombre d'individu</th>
                                            </tr>
                                        </thead>
                                        <tbody> 
                                        {% for secteur in pagination %}
                                                <tr>
                                                    <td class="text-center">{{secteur.getId()}}</td>
                                                    <td class="text-center"><a href="{{ path('articlesecteur',{'id': secteur.getId()}) }}">{{secteur.getNom()}}</a></td>
                                                    <td class="text-center">{{secteur.getNombreIndividu()}} </td>
                                                </tr>
                                        {% endfor %}
                                            </tbody>
                                        </table>
                                        <div class="navigation pagination">
                {{ knp_pagination_render(pagination,null, {}, {'alignment': 'center'}) }}
                                            </div>
                                            <div class="text-center">
                                                <a class="pull-center btn btn-primary" href="{{ path('newsecteur') }}">Nouveau Secteur</a>
                                            </div>
                                            </div>
                                        </div>
                                    </div>                      
                                </div>                            
                            </div>
{% endblock %}
{% block footer %}
{{ parent() }}
{% endblock %}